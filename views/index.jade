extends layout

block content
  #ibm-top.ibm-landing-page

    //MASTHEAD_BEGIN
    #ibm-masthead(role="banner" aria-label="IBM")
      #ibm-mast-options
        ul(role="toolbar" aria-labelledby="ibm-masthead")
          li#imb-geo(role="presentation")
            a(href="//www.ibm.com/planetwide/select/selector.html") United States
      #ibm-universal-nav
        #ibm-home.c-arrange.c--space-between
    
          a(class="c-arrange__item" href="//www.ibm.com/us-en/") IBM®
          ul.c-list.c--border.u-text-capitalize
            li.c-list__item
              span Log in
            li.c-list__item
              span Learn More
              
        ul#ibm-menu-links(role="toolbar" aria-label="Site map")
          li
            a(href="//www.ibm.com/sitemap/us/en/") Site map
        #ibm-search-module(role="search" aria-labelledby="ibm-masthead")
          form#ibm-search-form(action="//www.ibm.com/Search/" method="get")
            p
              label(for="q")
                span.ibm-access Search
              input#q(type="text" maxlength="100" value="" name="q")
              input(type="hidden" value="17" name="v")
              input(type="hidden" value="utf" name="en")
              input(type="hidden" value="en" name="lang")
              input(type="hidden" value="us" name="cc")
              input#ibm-search.ibm-btn-search(type="submit" value="Submit")
              //MASTHEAD_END
    #ibm-content-wrapper
      header(role="banner" aria-labelledby="ibm-pagetitle-h1")
        //LEADSPACE_BEGIN
        #ibm-leadspace-head.ibm-background-teal-core.ibm-alternate.c-background.ibm-alternate-background(style="")
          div.black-gradient
            #ibm-leadspace-body
              .ibm-columns
                .ibm-col-1-1.c-arrange.c--space-between
                  div
                    h1#ibm-pagetitle-h1.ibm-h1.ibm-light Your Learning
                    p.c-section No matter the style of education you want, or the pace, you can find and keep track of it on Your Learning. And with our exceptional mobile capabilities, you can learn anytime, anywhere.
                    
                    h2 Learn More
                  div
                    img.c-logo.ibm-padding-top-30(src="../svg/YL_logo_noBG.svg")
                  
                  //LEADSPACE_END

      main(role="main" aria-labelledby="ibm-pagetitle-h1")
        #ibm-pcon
          #ibm-content
            #ibm-content-body
              #ibm-content-main
                //-ONE COLUMN TOP CONTENT CALL TO ACTION
                .ibm-columns
                  .ibm-col-1-1
                    p Your Learning is IBM's digital learning platform, personalized with a built-in sense-and-respond cognitive capability that recommends learning for you and understands what you like over time. Professional development and education – is in one place, built solely on IBM technology including Bluemix, Cloudant, Softlayer, DB2 and more.
      
                    //-img(src="http://www.ibm.com/middleware/img/connectivity/connectivity-and-integration.jpg" width="100%")
                //-TWO COLUMN BUTTON ACTIONS
                .ibm-columns
                  .ibm-col-2-1
                    p.ibm-button-link.ibm-center
                      svg.u-fill-ibm-blue#Layer_1(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', width='64px', height='64px', viewbox='0 0 64 64', enable-background='new 0 0 64 64', xml:space='preserve')
                        g
                          polygon(points='36,28 24,28 24,32 28,32 28,44 24,44 24,48 40,48 40,44 36,44 	')
                          circle(cx='32', cy='20', r='4')
                          path(d='M32,4C16.537,4,4,16.537,4,32s12.537,28,28,28s28-12.537,28-28S47.463,4,32,4z M32,58C17.664,58,6,46.336,6,32\
                          S17.664,6,32,6s26,11.664,26,26S46.336,58,32,58z')

                      div.u-text-align-center
                        a.c-button.ibm-btn-pri.ibm-btn-blue-50(href="#") I'm an IBMer
                        small.u-text-size-smaller.u-margin-top-sm.u-display-block IBMers log into Your Learning
                  .ibm-col-2-1
                    p.ibm-center
                      svg.u-fill-ibm-blue#Layer_1(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', width='64px', height='64px', viewbox='0 0 64 64', enable-background='new 0 0 64 64', xml:space='preserve')
                        g
                          polygon(points='36,28 24,28 24,32 28,32 28,44 24,44 24,48 40,48 40,44 36,44 	')
                          circle(cx='32', cy='20', r='4')
                          path(d='M32,4C16.537,4,4,16.537,4,32s12.537,28,28,28s28-12.537,28-28S47.463,4,32,4z M32,58C17.664,58,6,46.336,6,32\
                          S17.664,6,32,6s26,11.664,26,26S46.336,58,32,58z')

                      div.u-text-align-center
                        button.c-button.ibm-btn-pri.ibm-btn-blue-50.future-customer(type="button") I'm a future customer
                        small.u-text-size-smaller.u-margin-top-sm.u-display-block Get more information about the Your Learning Platform
                    //- SUCCESS MESSAGE 
                    if success == true
                      .notice-success
                        p.
                          Thanks for expressing interest. We'll send you an email when there's more information available.
                    //- ------
                    //- FORM 
                    //- ------
                    form(method="post" action="/submit" class=(errors)? 'signup-form ibm-column-form form-errors' : 'signup-form ibm-column-form')
                      //- CUSTOMER NAME
                      p
                        label(for="customerName") Name:
                          span.ibm-required  *
                        span
                          input#customerName(type="text" size="40" name="customerName" value=(nameVal == null ? "" : nameVal) class=(errorName == true? 'ibm-field-error' : ''))
                        if errorName == true
                          each val in errors
                            if val.param == "customerName"
                              span.ibm-item-note.ibm-alert-link #{val.msg}.
                      //- CUSTOMER EMAIL
                      p
                        label(for="customerEmail") Email:
                          span.ibm-required  *
                        span
                          input#customerEmail(type="email" size="40" name="customerEmail" value=(emailVal == null ? "" : emailVal) class=(errorEmail == true? 'ibm-field-error' : ''))
                        if errorEmail == true
                          each val in errors 
                            if val.param == "customerEmail"
                              span.ibm-item-note.ibm-alert-link #{val.msg}.
                      //- CUSTOMER COMPANY
                      p
                        label(for="customerCompany") Company Name:
                        span
                          input#customerCompany(type="text" size="40" name="customerCompany" value=(companyVal == null ? '' : companyVal))
                      //- CUSTOMER PHONE
                      p
                        label(for="customerPhone") Phone Number:
                        span
                          input#customerPhone(type="text" size="40" name="customerPhone" value=(phoneVal == null ? '' : phoneVal))
                      //- SUBMIT BUTTON
                      p
                        button.ibm-btn-pri.ibm-btn-blue-50(type="submit") Submit

    //FOOTER_BEGIN
    #ibm-footer-module
    footer(role="contentinfo" aria-label="IBM")
      #ibm-footer
        h2.ibm-access Footer links
        ul
          li
            a(href="//www.ibm.com/contact/us/en/") Contact
          li
            a(href="//www.ibm.com/privacy/us/en/") Privacy
          li
            a(href="//www.ibm.com/legal/us/en/") Terms of use
          li
            a(href="//www.ibm.com/accessibility/us/en/") Accessibility
            //FOOTER_END
